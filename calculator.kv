<Calculator>:
    orientation: 'vertical'
    display: display

    FloatLayout:
        Image:
            source: 'assets/background.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            TextInput:
                id: display
                font_size: 48
                readonly: True
                halign: 'right'
                valign: 'middle'
                multiline: False
                size_hint_y: 0.2
                text: ""
                background_color: (1, 1, 1, 0.1)
                foreground_color: (1, 1, 1, 1)

            GridLayout:
                cols: 4
                rows: 5
                size_hint_y: 0.8

                Button:
                    text: "7"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(7)
                Button:
                    text: "8"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(8)
                Button:
                    text: "9"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(9)
                Button:
                    text: "/"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression('/')

                Button:
                    text: "4"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(4)
                Button:
                    text: "5"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(5)
                Button:
                    text: "6"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(6)
                Button:
                    text: "*"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression('*')

                Button:
                    text: "1"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(1)
                Button:
                    text: "2"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(2)
                Button:
                    text: "3"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(3)
                Button:
                    text: "-"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression('-')

                Button:
                    text: "C"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.clear()
                Button:
                    text: "0"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression(0)
                Button:
                    text: "="
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.calculate(root.display.text)
                Button:
                    text: "+"
                    font_size: 32
                    color: (1, 1, 1, 1)
                    background_color: (0.263, 0.204, 0, 1)
                    on_press: root.append_expression('+')
